@model NguyenDinhHuy.Models.User
@{
    ViewBag.Title = "Đăng ký tài khoản";
}
<h2>Đăng ký</h2>
<form method="post">
    <label>Mã nhân viên:</label>
    <input asp-for="EmployeeCode" required /><br />
    <label>Họ tên:</label>
    <input asp-for="FullName" required /><br />
    <label>Email:</label>
    <input asp-for="Email" required /><br />
    <label>Mật khẩu:</label>
    <input asp-for="PasswordHash" type="password" required /><br />
    <label>Chức vụ:</label>
    <input asp-for="Position" /><br />
    <label>Phòng ban:</label>
    <input asp-for="Department" /><br />
    <button type="submit">Đăng ký</button>
</form>
@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
@if (ViewBag.Message != null)
{
    <p style="color:green">@ViewBag.Message</p>
}
